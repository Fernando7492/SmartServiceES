      </div>
      <div class="card-title"> <%= servico.nome_completo %></div>
      <div class="card-subtitle">Data: <%= servico.data_nascimento %></div>
      <div class="card-footer">
        <div class="card-price"><span>Contato: </span><%= servico.telefone %></div>
        <button class="card-btn text-center" style="margin-top: 20px;">
          <%= link_to "Detalhes", servico %>
        </button>
      </div>
    </div>
  <% end %>
</div>

