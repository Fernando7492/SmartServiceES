<style>
    .input {
        padding: 10px;
        width: 100%;
        background: linear-gradient(135deg, rgb(218, 232, 247) 0%, rgb(214, 229, 247) 100%);
        border: none;
        color: #9EBCD9;
        font-size: 20px;
        border-radius: 50px;
    }

    .search__icon path {
        fill: white;
    }

    .InputContainer {
        text-align: center;
        width: 250px;
        position: fixed;
        top: 50px;
        right: 10px;
    }

</style>

<p style="color: green"><%= notice %></p>
<div id="servicos">
  <div class="d-flex justify-content-center">
    <div class="table-responsive" style="max-width: 1000px;">
      <table class="table rounded-table">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nome completo</th>
          <th scope="col">Descrição</th>
          <th scope="col">Valor(R$)</th>
          <th scope="col">Categoria</th>
          <th scope="col">Horario de inicio</th>
          <th scope="col">Horario de termino</th>
          <th scope="col">Trabalhador</th>
          <th scope="col">Visualizar</th>
        </tr>
        </thead>
        <tbody>
        <% @servicos.each_with_index do |servico, index| %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= servico.nome %></td>
            <td><%= servico.descricao %></td>
            <td><%= servico.valor %></td>
            <td><%= servico.categoria %></td>
            <td><%= servico.horario_inicio %></td>
            <td><%= servico.horario_termino %></td>
            <td><%= servico.trabalhador.nome_completo %></td>
            <td> <%= link_to "Show this trabalhador", servico %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center">
  <div class="btn-group" role="group" aria-label="Basic example">
    <button type="button" class="btn btn-primary">
      <%= link_to "New servico", new_servico_path, class: "white-text" %>
    </button>
    <button type="button" class="btn btn-primary">
      <%= link_to "Pagina inicial", home_index_path, class: "white-text"%>
    </button>
  </div>
</div>

<div class="InputContainer">
  <%= search_form_for @q, html: { class: 'search-form' } do |f| %>
    <%= f.label :categoria, "", class: 'labelforsearch' do %>
      <svg viewBox="0 0 512 512" class="searchIcon">
        <path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"></path>
      </svg>
    <% end %>
    <%= f.search_field :categoria_cont, class: 'input', placeholder: 'Pesquisa por categoria'%>
    <%= f.submit 'Pesquisar', class: 'micButton' do %>
      <svg viewBox="0 0 384 512" class="micIcon">
        <path d="M192 0C139 0 96 43 96 96V256c0 53 43 96 96 96s96-43 96-96V96c0-53-43-96-96-96zM64 216c0-13.3-10.7-24-24-24s-24 10.7-24 24v40c0 89.1 66.2 162.7 152 174.4V464H120c-13.3 0-24 10.7-24 24s10.7 24 24 24h72 72c13.3 0 24-10.7 24-24s-10.7-24-24-24H216V430.4c85.8-11.7 152-85.3 152-174.4V216c0-13.3-10.7-24-24-24s-24 10.7-24 24v40c0 70.7-57.3 128-128 128s-128-57.3-128-128V216z"></path>
      </svg>
    <% end %>
    <% end %>
</div>
