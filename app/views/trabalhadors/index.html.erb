<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Smart Service</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <style>
      div{
          text-align: center;
      }
      .white-text {
          color: white;
      }
  </style>
</head>
<body>
<p style="color: green"><%= notice %></p>

<div id="trabalhadors">
  <div class="d-flex justify-content-center">
    <div class="table-responsive" style="max-width: 1000px;">
      <table class="table rounded-table">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nome completo</th>
          <th scope="col">Telefone</th>
          <th scope="col">Data de Nascimento</th>
          <th scope="col">Email</th>
          <th scope="col">Senha</th>
          <th scope="col">Profiss√£o</th>
          <th scope="col">Visualizar</th>
        </tr>
        </thead>
        <tbody>
        <% @trabalhadors.each_with_index do |trabalhador, index| %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= trabalhador.nome_completo %></td>
            <td><%= trabalhador.telefone %></td>
            <td><%= trabalhador.data_nascimento %></td>
            <td><%= trabalhador.email %></td>
            <td><%= trabalhador.senha %></td>
            <td><%= trabalhador.profissao %></td>
            <td> <%= link_to "Show this trabalhador", trabalhador %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center">
  <div class="btn-group" role="group" aria-label="Basic example">
    <button type="button" class="btn btn-primary">
      <%= link_to "New trabalhador", new_trabalhador_path, class: "white-text" %>
    </button>
    <button type="button" class="btn btn-primary">
      <%= link_to "Pagina inicial", home_index_path, class: "white-text"%>
    </button>
  </div>
</div>

</body>


