<%= render @trabalhador %>

<div class="d-flex justify-content-center" style="margin-bottom: 20px">
  <button class="btn btn-primary custom-button">
    <%= link_to "Editar trabalhador", edit_trabalhador_path(@trabalhador), class: "white-text"  %>
  </button>
  <button class="btn btn-primary custom-button">
    <%= link_to "Retornar a listagem", trabalhadors_path, class: "white-text" %>
  </button>
    <%= button_to "Apagar trabalhador", @trabalhador, method: :delete , class: "white-text btn btn-primary custom-button"%>

</div>
