  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <style>
      header.shadow {
          box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1); /* Ajuste os valores conforme necessário */
      }
      .white-text {
          color: white;
      }
      .rounded-table {
          border-radius: 10px; /* Ajuste o valor conforme necessário */
          overflow: hidden; /* Para garantir que o conteúdo da tabela não ultrapasse as bordas arredondadas */
      }
      .contorno-texto {
          color: transparent; /* Torna o texto transparente */
          -webkit-text-stroke: 1px white; /* Contorno para navegadores WebKit (como Chrome e Safari) */
          text-stroke: 1px white; /* Contorno padrão */
      }

  </style>
</head>

