<head>
  <style>
      .dropdown{
          text-align: center;
      }
      .card-column {
          flex: 0 0 calc(33.33% - 150px);
          margin-right: 10px;
      }
      .row{
          margin-top: 150px;
          top: 50px;
      }
      .custom-card {
          width: 300px;
          height: 400px;
      }
      .custom-button {
          text-align: center;
          margin-top: 50px;
      }
      .container {
          flex-grow: 2;
      }
      .white-text {
          color: white;
      }
      footer{
          text-align: center;
      }
      .shadow-hover:hover {
          box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
          transition: box-shadow 0.3s ease-in-out;
      }
      .scale-hover {
          transition: transform 0.3s ease-in-out;
      }

      .scale-hover:hover {
          transform: scale(1.05);
      }

      .image-container {
          text-align: center;
      }
  </style>
</head>

<body>
<div class="row justify-content-center">
  <div class="col-md-2  mb-4 card-column">
    <div class="card custom-card text-center scale-hover" style="width: 18rem;">
      <div class="image-container">
        <img src="<%= asset_path('iconHome/worker.png') %>" alt="Descrição da Imagem" align="" width="100" height="100" style="margin-top: 20px">
      </div>
      <div class="card-body">
        <h5 class="card-title">Trabalhadores</h5>
        <p class="card-text">Listagem de todos os trabalhadores, simples e fácil.</p>
        <div class="d-flex justify-content-center">
          <button class="btn btn-primary custom-button">
            <%= link_to "Trabalhadores", trabalhadors_path, class: "white-text" %>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-2 mb-4 card-column">
    <div class="card custom-card text-center scale-hover" style="width: 18rem;">
      <div class="image-container">
        <img src="<%= asset_path('iconHome/serviço.png') %>" alt="Descrição da Imagem" align="" width="100" height="100" style="margin-top: 20px">
      </div>
      <div class="card-body">
        <h5 class="card-title">Serviços</h5>
        <p class="card-text">Listagem de todos os serviços, simples e fácil.</p>
        <div class="d-flex justify-content-center">
          <button class="btn btn-primary custom-button">
            <%= link_to "Serviços", servicos_path, class: "white-text" %>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-2 mb-4 card-column">
    <div class="card custom-card text-center scale-hover" style="width: 18rem;">
      <div class="image-container">
        <img src="<%= asset_path('iconHome/users.png') %>" alt="Descrição da Imagem" align="" width="100" height="100" style="margin-top: 20px">
      </div>
      <div class="card-body">
        <h5 class="card-title">Clientes</h5>
        <p class="card-text">Listagem de todos os clientes, simples e fácil.</p>
        <div class="d-flex justify-content-center">
          <button class="btn btn-primary custom-button">
            <%= link_to "Clientes", clientes_path, class: "white-text" %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<footer class="footer mt-auto py-3 bg-light fixed-bottom">
  <div class="container">
    <span class="text-muted">© 2023 Smart Service. Todos os direitos reservados.</span>
  </div>
</footer>
</body>


